#https://www.hackerrank.com/challenges/angry-children/problem?h_l=interview&isFullScreen=true&playlist_slugs%5B%5D%5B%5D=interview-preparation-kit&playlist_slugs%5B%5D%5B%5D=greedy-algorithms
def maxMin(k, arr):
    arr.sort(reverse=True)
    smallest = 10**9
    for i in range(len(arr)-k+1):
        smallest = min(smallest, arr[i] - arr[i+k-1])
    return smallest
