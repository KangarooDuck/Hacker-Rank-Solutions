#https://www.hackerrank.com/challenges/ctci-comparator-sorting/submissions/code/446346954?h_l=interview&isFullScreen=true&playlist_slugs%5B%5D%5B%5D=interview-preparation-kit&playlist_slugs%5B%5D%5B%5D=sorting
class Player:
    def __init__(self, name, score):
        self.score = score
        self.name = name
    def __repr__(self):
        return name + ' ' + str(score)
    def comparator(a, b):
        if a.score < b.score:
            return 1
        elif a.score > b.score:
            return -1
        else:
            if a.name > b.name:
                return 1
            elif a.name < b.name:
                return -1
            return 0
