#https://www.hackerrank.com/challenges/count-triplets-1/problem?isFullScreen=true&h_l=interview&playlist_slugs%5B%5D=interview-preparation-kit&playlist_slugs%5B%5D=dictionaries-hashmaps
def countTriplets(arr, r):
    rightDict = {}
    for i in arr:
        rightDict[i] = rightDict.get(i, 0) + 1
    result = 0
    leftDict = {}
    for value in arr:
        rightDict[value] = rightDict[value] - 1
        result += leftDict.get(value/r, 0)*rightDict.get(value*r, 0)
        leftDict[value] = leftDict.get(value, 0) + 1
    return result
